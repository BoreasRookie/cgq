<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boreas">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.huawei.android.launcher.permission.CHANGE_BADGE" />
    <uses-permission android:name="com.huawei.permission.sec.MDM" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="科研管理"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.ForGetActivity"
            android:label="@string/title_activity_edit_forget"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ComPositionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.PaperActivity"
            android:label="@string/title_activity_edit_paper"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ProActivity"
            android:label="@string/title_activity_edit_pro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ClipueActivity"
            android:label="@string/title_activity_edit_clipue"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.EditUserActivity"
            android:label="@string/title_activity_edit_user"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:label="@string/user_list"
            android:screenOrientation="portrait" />
    </application>

</manifest>